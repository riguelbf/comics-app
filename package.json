{
  "name": "comics-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@unform/core": "1.9.8",
    "@unform/web": "1.9.8",
    "axios": "^0.19.2",
    "history": "^4.10.1",
    "mdbreact": "^4.25.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-icons": "^3.9.0",
    "react-loader-spinner": "^3.1.5",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "react-toast-notifications": "^2.4.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "styled-components": "^5.0.1"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build --define process.env.NODE_ENV='\"production\"'",
    "test": "react-app-rewired test --no-watch",
    "test-debug": "react-scripts --inspect-brk test --env=jsdom --runInBand",
    "test-coverage": "react-app-rewired test --watchAll=false --env=jsdom --coverage --collectCoverageFrom=src/**/*.js",
    "eject": "react-scripts eject",
    "netlify-deploy": "netlify deploy --dir=./build -p -m \"$(git log -1 --pretty=%B)\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "axios-mock-adapter": "^1.17.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "jest-localstorage-mock": "^2.4.0",
    "jest-prop-type-error": "^1.1.0",
    "netlify-cli": "^2.38.0",
    "react-app-rewired": "^2.1.5",
    "redux-mock-store": "^1.5.4"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/__tests__/stubs/",
      "<rootDir>/src/__tests__/helpers/"
    ],
    "moduleNameMapper": {
      "Ë†~/(.*)": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "jest-localstorage-mock",
      "jest-prop-type-error"
    ],
    "collectCoverageFrom": [
      "!<rootDir>/src/**/styles.js"
    ]
  }
}
